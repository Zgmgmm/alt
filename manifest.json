{
  "manifest_version": 3,
  "name": "Video Speed Toggle",
  "version": "1.0",
  "description": "Enhance your video watching experience with convenient playback speed controls",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }],
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  }
}